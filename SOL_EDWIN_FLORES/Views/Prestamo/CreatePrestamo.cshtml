@model SOL_EDWIN_FLORES.Models.PRESTAMOS


<span class="text-muted">Complete los siguientes datos:</span>
<hr />
<form id="formControl">

    <div class="card-body pt-0">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Libro</label>
                    <select name="id_libro" class="form-control">
                        @foreach (var libros in ViewBag.libros)
                        {
                            <option value="@libros.ID">@libros.NOMBRE</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Usuario</label>
                    <select name="id_usuario" class="form-control">
                        @foreach (var usuarios in ViewBag.usuarios)
                        {
                            <option value="@usuarios.ID">@usuarios.NOMBRE</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tipo de Lectura</label>
                        <select name="tipo_lectura" class="form-control">
                            @foreach (var usuarios in ViewBag.tipoPrestamo)
                            {
                                <option value="@usuarios.codigo">@usuarios.codigo</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
    <br />


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input  type="button" onclick="RegistrarInformacion()" value="Guardar" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
    

    

</form>